{% endblock %}

{% block footer %}
    {% include 'components/organisms/footer/footer.html.twig'
        with {
            button: {
                title: 'Jetzt shoppen',
                class: 'bg-full'
            },
            section_1: {
                title: 'Shop',
                items: [
                    { title: 'Premium Stühle', link: '#faq' },
                    { title: 'Limited Editions', link: '#editions' },
                    { title: 'Zubehör', link: '#ruckgabe' },
                    { title: 'International Resellers', link: '#resellers' }
                ]
            },
            section_2: {
                title: 'Zubehör',
                items: [
                    { title: 'FAQ', link: '#faq' },
                    { title: 'Limited Editions', link: '#editions' },
                    { title: 'Rückgabe', link: '#ruckgabe' },
                    { title: 'International Resellers', link: '#resellers' }
                ]
            },
            section_3: {
                title: 'Informationen',
                items: [
                    { title: 'Rückgabe', link: '#ruckgabe' },
                    { title: 'Zubehör', link: '#faq' },
                    { title: 'Limited Editions', link: '#editions' },
                    { title: 'Premium Stühle', link: '#faq' },
                ]
            }
        }
