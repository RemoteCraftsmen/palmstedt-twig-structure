{% extends 'layouts/base.html.twig' %}

{% block title %}NobleChairs theme{% endblock %}

{% block header %}
    {% include 'components/organisms/header/header.html.twig'
        with {
            logoSrc: '/img/noblechairs-logo.svg',
            menuItems: [
                { title: 'Premium Stühle', link: '#faq' },
                { title: 'Limited Editions', link: '#editions' },
                { title: 'Zubehör', link: '#ruckgabe' },
            ]
        }
    %}
{% endblock %}

{% block body %}
    {% include 'components/molecules/image/image.html.twig'
        with {
            src: '/img/noblechairs-image-1.jpeg',
            title: 'EPIC',
            description: 'Der Beginn einer außergewöhnlichen Reise',
            cta: 'AUFBRECHEN',
            ctaClass: 'bg-full'
        }
    %}
    {% include 'components/molecules/image/image.html.twig'
        with {
            src: '/img/noblechairs-image-2.jpeg',
            title: 'HERO',
            description: ' Werde zum Helden',
            cta: 'EXZELLENZ ERLEBEN',
        }
