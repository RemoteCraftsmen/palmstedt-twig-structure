{% extends 'layouts/base.html.twig' %}

{% block title %}EndgameGear theme{% endblock %}

{% set bodyTagClass = 'theme-yellow' %}

{% block header %}
    {% include 'components/organisms/header/header.html.twig'
        with {
        logoSrc: 'https://assets.endgamegear.com/assets/endgamegear/images/logo.svg',
        menuItems: [
            { title: 'Mäuse', link: '#mause' },
            { title: 'Mauspads', link: '#mauspads' },
            { title: 'Zubehör', link: '#zubehor' },
        ]
    }
    %}
{% endblock %}

{% block body %}
    {% include 'components/molecules/image/image.html.twig'
        with {
            src: 'https://img.endgamegear.com/hp/about-wallpaper.jpg?auto=compress%2Cformat&fit=max&q=70',
            title: 'Precision redefined',
            description: 'Jetzt mit neuem Sensor, Switches und Skate-Design, verbessertem Kabel und neuen Farbvarianten!',
            cta: 'Mehr erfahren',
            ctaClass: 'bg-full'
        }
