        with {
            src: 'https://img.noblechairs.com/homepage-redesign/accessories1_desktop.jpg?auto=compress,format&fit=max&q=70',
            title: 'NEU! XM1 RGB',
            description: 'Professionelle Gaming-Maus für ambitionierte Gamer mit Style',
            cta: 'Jetzt shoppen',
            class: "bg-light"
        }
    %}
{% endblock %}

{% block footer %}
    {% include 'components/organisms/footer/footer.html.twig'
        with {
            button: {
                title: 'Jetzt shoppen',
            },
            section_1: {
                title: 'Shop',
                items: [
                    { title: 'Premium Stühle', link: '#faq' },
                    { title: 'Limited Editions', link: '#editions' },
                    { title: 'Zubehör', link: '#ruckgabe' },
                    { title: 'International Resellers', link: '#resellers' }
                ]
            },
            section_2: {
                title: 'Zubehör',
                items: [
                    { title: 'FAQ', link: '#faq' },
                    { title: 'Limited Editions', link: '#editions' },
                    { title: 'Rückgabe', link: '#ruckgabe' },
                    { title: 'International Resellers', link: '#resellers' }
                ]
