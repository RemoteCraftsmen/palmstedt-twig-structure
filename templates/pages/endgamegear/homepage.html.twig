            section_3: {
                title: 'Informationen',
                items: [
                    { title: 'Rückgabe', link: '#ruckgabe' },
                    { title: 'Zubehör', link: '#faq' },
                    { title: 'Limited Editions', link: '#editions' },
                    { title: 'Premium Stühle', link: '#faq' },
                ]
            }
        }
